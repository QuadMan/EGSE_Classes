<Window x:Class="WpfEgseBuk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EGSE.Cyclogram"
        Title="MainWindow" 
        Width="1280" 
        Height="720"  
        MinWidth="640" 
        MinHeight="480" FontFamily="Consolas" FontSize="13">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:CyclogramControl Grid.Row="1" 
                                Grid.Column="1" 
                                x:Name="CycloGrid"/>
        <Grid Grid.Row="0" 
              Grid.Column="1" 
              Width="200" 
              HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Content="О программе"
                    Margin="5"/>
            <Button Grid.Column="1" 
                    Content="Выход"
                    Margin="5"/>
        </Grid>           
        <StackPanel Grid.Row="1" 
                    Grid.Column="0">
            <Expander Header="Телеметрия" 
                      Margin="5" 
                      BorderBrush="LightBlue" 
                      BorderThickness="2" 
                      IsExpanded="True">
                <StackPanel>
                    <GroupBox Header="Питание БУСК" 
                              BorderThickness="1" 
                              BorderBrush="LightBlue">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" 
                                        Grid.Row="0" 
                                        Grid.Column="0">                                
                                <Label Content="БУСК ПК1 А" 
                                       VerticalContentAlignment="Center" 
                                       Background="Red"
                                       Margin="2"
                                       Padding="2"
                                       BorderBrush="LightBlue"
                                       BorderThickness="1"/>
                                <Button Content="ВЫКЛ" 
                                        BorderBrush="LightBlue"                                         
                                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                                        Focusable="False"
                                        Margin="2"
                                        Padding="2"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        Grid.Row="0" 
                                        Grid.Column="1">
                                <Label Content="БУСК ПК2 А" 
                                       VerticalContentAlignment="Center"
                                       Background="Red"
                                       Margin="2"
                                       Padding="2"
                                       BorderBrush="LightBlue"
                                       BorderThickness="1"/>
                                <Button Content="ВКЛ" 
                                        BorderBrush="LightBlue"                                       
                                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                                        Focusable="False"
                                        Margin="2"
                                        Padding="2"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="1" 
                                        Grid.Column="0">
                                <Label Content="БУСК ПК1 Б" 
                                       VerticalContentAlignment="Center" 
                                       Background="Red"
                                       Margin="2"
                                       Padding="2"
                                       BorderBrush="LightBlue"
                                       BorderThickness="1"/>
                                <Button Content="ВКЛ" 
                                        BorderBrush="LightBlue"                                        
                                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                                        Focusable="False"
                                        Margin="2"
                                        Padding="2"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        Grid.Row="1" 
                                        Grid.Column="1">
                                <Label Content="БУСК ПК2 Б"
                                       VerticalContentAlignment="Center" 
                                       Background="Green"
                                       Margin="2"
                                       Padding="2"
                                       BorderBrush="LightBlue"
                                       BorderThickness="1"/>
                                <Button Content="ВЫКЛ"
                                        BorderBrush="LightBlue"                                        
                                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                                        Focusable="False"
                                        Margin="2"
                                        Padding="2"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Питание БУНД"
                              BorderThickness="1" 
                              BorderBrush="LightBlue">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" 
                                        Grid.Row="0" 
                                        Grid.Column="0">
                                <Label Content="БУНД ПК1 А" 
                                       VerticalContentAlignment="Center" 
                                       Background="Red"
                                       Margin="2"
                                       Padding="2"
                                       BorderBrush="LightBlue"
                                       BorderThickness="1"/>
                                <Button Content="ВЫКЛ" 
                                        BorderBrush="LightBlue"                                         
                                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                                        Focusable="False"
                                        Margin="2"
                                        Padding="2"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        Grid.Row="0" 
                                        Grid.Column="1">
                                <Label Content="БУНД ПК2 А" 
                                       VerticalContentAlignment="Center"
                                       Background="Red"
                                       Margin="2"
                                       Padding="2"
                                       BorderBrush="LightBlue"
                                       BorderThickness="1"/>
                                <Button Content="ВКЛ" 
                                        BorderBrush="LightBlue"                                       
                                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                                        Focusable="False"
                                        Margin="2"
                                        Padding="2"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="1" 
                                        Grid.Column="0">
                                <Label Content="БУНД ПК1 Б" 
                                       VerticalContentAlignment="Center" 
                                       Background="Red"
                                       Margin="2"
                                       Padding="2"
                                       BorderBrush="LightBlue"
                                       BorderThickness="1"/>
                                <Button Content="ВКЛ" 
                                        BorderBrush="LightBlue"                                        
                                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                                        Focusable="False"
                                        Margin="2"
                                        Padding="2"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        Grid.Row="1" 
                                        Grid.Column="1">
                                <Label Content="БУНД ПК2 Б"
                                       VerticalContentAlignment="Center" 
                                       Background="Green"
                                       Margin="2"
                                       Padding="2"
                                       BorderBrush="LightBlue"
                                       BorderThickness="1"/>
                                <Button Content="ВЫКЛ"
                                        BorderBrush="LightBlue"                                        
                                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                                        Focusable="False"
                                        Margin="2"
                                        Padding="2"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <Grid Background="LightBlue">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0"
                               Grid.Row="0"
                               Grid.RowSpan="2"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="НП"/>
                        <Label Grid.Column="0"
                               Grid.Row="2"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="УФЕС"/>
                        <Label Grid.Column="0"
                               Grid.Row="3"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="ВУФЕС"/>
                        <Label Grid.Column="0"
                               Grid.Row="4"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="СДЩ"/>
                        <Label Grid.Column="1"                               
                               Grid.Row="0"
                               Grid.ColumnSpan="2"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="Питание"/>
                        <Label Grid.Column="3"                               
                               Grid.Row="0"
                               Grid.ColumnSpan="2"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="Подсветка"/>
                        <Label Grid.Column="5"                               
                               Grid.Row="0"
                               Grid.ColumnSpan="2"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="Затворы"/>
                        <Label Grid.Column="1"                               
                               Grid.Row="1"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="ОСН"/>
                        <Label Grid.Column="2"                               
                               Grid.Row="1"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="РЕЗ"/>
                        <Label Grid.Column="3"                               
                               Grid.Row="1"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="ОСН"/>
                        <Label Grid.Column="4"                               
                               Grid.Row="1"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="РЕЗ"/>
                        <Label Grid.Column="5"                               
                               Grid.Row="1"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="ОСН"/>
                        <Label Grid.Column="6"                               
                               Grid.Row="1"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="White"
                               Margin="0,0,1,1"
                               Content="РЕЗ"/>                        
                    </Grid>
                </StackPanel>
            </Expander>
            <Expander  Header="Окна управления" 
                       BorderBrush="LightBlue" 
                       BorderThickness="2" 
                       Margin="5" 
                       IsExpanded="True">
                <StackPanel>
                    <CheckBox Content="Управление КВВ" Margin="5"/>
                    <CheckBox Content="Имитаторы" Margin="5"/>
                </StackPanel>
            </Expander>
        </StackPanel>
        <Label Margin="5" Content="КИА БУК не подключен" Padding="5" BorderBrush="LightBlue" BorderThickness="2" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0"/>
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2" Height="auto">        
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <Label>Текст слева</Label>
            </StatusBarItem>    
            <StatusBarItem Grid.Column="1">
                <Label>Текст справа</Label>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
