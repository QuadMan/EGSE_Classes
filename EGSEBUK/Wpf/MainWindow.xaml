<Window x:Class="WpfEgseBuk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EGSE.Cyclogram"
        Title="MainWindow" Height="480" Width="640" MinWidth="640" MinHeight="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>        
        <TabControl Grid.Row="1" Grid.Column="1">
            <TabItem Header="Тест 1">
                <Grid/>
            </TabItem>
            <TabItem Header="Тест 2">
                <Grid/>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="0" Grid.Column="1" Width="200" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="О программе" Margin="5" Grid.Column="0"/>
            <Button Content="Выход" Margin="5" Grid.Column="1"/>
        </Grid>           
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Expander Margin="5" Header="Телеметрия" Padding="5" BorderBrush="LightBlue" BorderThickness="2" IsExpanded="True">
                <StackPanel>
                    <GroupBox Header="Питание БУСК">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            <Label Margin="5" Content="БУСК ПК1 А" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0" Background="Red"/>
                            <Button Content="ВЫКЛ" Margin="7" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="БУСК ПК2 А" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="1" Background="Red"/>
                            <Button Content="ВКЛ" Margin="7" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="БУСК ПК1 Б" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="0" Background="Red"/>
                            <Button Content="ВКЛ" Margin="7" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="БУСК ПК2 Б" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1" Background="Green"/>
                            <Button Content="ВЫКЛ" Margin="7" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Питание БУНД">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            <Label Margin="5" Content="БУНД ПК1 А" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0" Background="Red"/>
                            <Button Content="ВЫКЛ" Margin="7" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="БУНД ПК2 А" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="1" Background="Red"/>
                            <Button Content="ВКЛ" Margin="7" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="БУНД ПК1 Б" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="0" Background="Red"/>
                            <Button Content="ВКЛ" Margin="7" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="БУНД ПК2 Б" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1" Background="Green"/>
                            <Button Content="ВЫКЛ" Margin="7" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Питание НП">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            <Label Margin="5" Content="УФЕС ОСН" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0" Background="Red"/>
                            <Button Content="ВЫКЛ" Margin="7" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="УФЕС РЕЗ" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="1" Background="Red"/>
                            <Button Content="ВКЛ" Margin="7" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="ВУФЕС ОСН" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="0" Background="Red"/>
                            <Button Content="ВКЛ" Margin="7" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="ВУФЕС РЕЗ" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1" Background="Green"/>
                            <Button Content="ВЫКЛ" Margin="7" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="СДЩ ОСН" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="0" Background="Green"/>
                            <Button Content="ВЫКЛ" Margin="7" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                            <Label Margin="5" Content="СДЩ РЕЗ" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="1" Background="Red"/>
                            <Button Content="ВКЛ" Margin="7" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Width="32" BorderBrush="White" BorderThickness="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Focusable="False"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </Expander>
            <Expander Margin="5" Header="Окна управления" Padding="5" BorderBrush="LightBlue" BorderThickness="2" IsExpanded="True">
                <StackPanel>
                    <CheckBox Content="Управление КВВ" Margin="5"/>
                    <CheckBox Content="Имитаторы" Margin="5"/>
                </StackPanel>
            </Expander>
        </StackPanel>
        <Label Margin="5" Content="КИА БУК не подключен" Padding="5" BorderBrush="LightBlue" BorderThickness="2" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0"/>
    </Grid>
</Window>
